<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="elsuper.david.com.calculadora.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:layout_weight=".1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:focusableInTouchMode="false"
            android:textAlignment="textEnd"
            android:singleLine="true"
            android:textSize="18sp"
            android:id="@+id/main_etResult"
            android:layout_margin="2dp"
            android:layout_weight=".25"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:soundEffectsEnabled="true"
            android:layout_margin="5dp"
            android:background="@color/colorBtnBinaryStandard"
            android:id="@+id/main_btnBinary"
            android:textColor="@color/colorCalculatorBackground"
            android:textSize="11sp"
            android:text="@string/main_txtModeBinary"
            android:layout_weight=".75"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="2dp"
        android:background="@color/colorCalculatorBackground"
        android:orientation="vertical"
        android:layout_weight=".9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_margin="2dp"
                android:background="@color/colorBtnDelete"
                android:id="@+id/main_btnDelete"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text="@string/main_txtDelete"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageButton
                android:layout_margin="2dp"
                android:background="@color/colorBtnDelete"
                android:id="@+id/main_btnDeleteOne"
                android:src="@mipmap/ic_launcher_arrow"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorBtnOperators"
                android:id="@+id/main_btnModule"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text=" % "
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorBtnOperators"
                android:id="@+id/main_btnMulti"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text=" * "
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorButton"
                android:id="@+id/main_btnSeven"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text="7"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorButton"
                android:id="@+id/main_btnEight"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text="8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorButton"
                android:id="@+id/main_btnNine"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text="9"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorBtnOperators"
                android:id="@+id/main_btnDiv"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text=" / "
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorButton"
                android:id="@+id/main_btnFour"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text="4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorButton"
                android:id="@+id/main_btnFive"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text="5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorButton"
                android:id="@+id/main_btnSix"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text="6"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorBtnOperators"
                android:id="@+id/main_btnSub"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text=" - "
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorButton"
                android:id="@+id/main_btnOne"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text="1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorButton"
                android:id="@+id/main_btnTwo"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text="2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorButton"
                android:id="@+id/main_btnThree"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text="3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorBtnOperators"
                android:id="@+id/main_btnSum"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text=" + "
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorButton"
                android:id="@+id/main_btnZero"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text="0"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorButton"
                android:id="@+id/main_btnPoint"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text="."
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorButton"
                android:id="@+id/main_btnMoreLess"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text="+/-"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:layout_margin="2dp"
                android:background="@color/colorBtnEqual"
                android:id="@+id/main_btnEqual"
                android:textColor="@color/colorCalculatorBackground"
                android:textSize="16sp"
                android:text=" = "
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
